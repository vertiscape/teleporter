{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "checkJs": true,
    "strict": true,
    "preserveSymlinks": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "removeComments": false,
    "baseUrl": "."
  },
  "include": ["package"]
}
